{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start-cli": "npm run build && node ./dist/main.cli.js",
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run start ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "json-server": "json-server --watch ./src/mocks/mock-server-data.json --port 3000",
    "docker-db-run": "docker compose --file ./docker-compose.dev.yml --env-file ./.env --project-name buy-and-sell up"
  },
  "devDependencies": {
    "@types/node": "24.1.0",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.4",
    "pino-pretty": "13.1.3",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^24.0.0",
    "npm": ">=11"
  },
  "dependencies": {
    "axios": "1.13.2",
    "chalk": "5.6.2",
    "dayjs": "1.11.19",
    "dotenv": "17.2.3",
    "inversify": "7.10.8",
    "mongoose": "9.1.2",
    "pino": "10.1.0",
    "reflect-metadata": "0.2.2",
    "zod": "4.3.5"
  }
}
